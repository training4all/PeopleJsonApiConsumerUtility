@model IEnumerable<PeoplePetUtility.Model.PetsGroupedOnOwnerGender>

@*@{
    ViewData["Title"] = "People Pet Data";
}*@

<p>Data Fetched for People and there Pets using <b> http://agl-developer-test.azurewebsites.net/people.json</b>  API  </p>


@if (Model.Count() == 0)
{
    <p> API doesn't return any data </p>
}
else
{
    @foreach (var owner in Model)
    {
        <li>
            <b>@owner.gender</b>

            <ol>
                @foreach (var petName in owner.pets)
                {
                    <li> @petName </li>
                }
            </ol>

        </li>
    }

}

